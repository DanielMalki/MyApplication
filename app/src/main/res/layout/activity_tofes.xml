<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TofesActivity"
    android:background="#65DABE">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="win the game to continue😉❤💕"
        android:textColor="#20837B"
        android:textSize="22.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/togame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Go to game😁"
        android:backgroundTint="#D5FA8DBC"
        android:textColor="#D60641"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/wintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="you're yet to win😒"
        android:textColor="#20837B"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/togame" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="cool tofes😊"
        android:textColor="#20837B"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toterms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D5FA8DBC"
        android:text="terms of use"
        android:textColor="#D60641"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/wintext"
        app:layout_constraintStart_toStartOf="@+id/wintext"
        app:layout_constraintTop_toBottomOf="@+id/wintext" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="305dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="you're yet to agree to terms of use🤔"
        android:textAlignment="center"
        android:textColor="#20837B"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/toterms"
        app:layout_constraintStart_toStartOf="@+id/toterms"
        app:layout_constraintTop_toBottomOf="@+id/toterms" />
</androidx.constraintlayout.widget.ConstraintLayout>